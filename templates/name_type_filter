      {
        id: 'table.name_type',
        label: 'Name Type',
        type: 'integer',
        plugin: 'selectize',
        plugin_config: {
          valueField: 'val',
          labelField: 'name',
          searchField: 'name',
          sortField: 'val',
            create: true,
            maxItems: 1,
            plugins: ['remove_button'],
            onInitialize: function() {
              var that = this;
              $.getJSON('data/name_types.json', function(data) {
                data.forEach(function(item) {
                  that.addOption(item);
                });
              });
            }
          },
          valueSetter: function(rule, value) {
            rule.$el.find('.rule-value-container input')[0].selectize.setValue(value);
          }
      }
